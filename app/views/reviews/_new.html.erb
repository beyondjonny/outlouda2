<!-- http://localhost:3000/interviews/1/videos/1 -->

<div class="form-style-5">
  <div class="col-md-auto">
    <h3>Add a review </h3>
    <%= simple_form_for [@video, @review], url:  interview_video_reviews_path(@interview, @video), method: :post do |f| %>
    <legend><span class="number">1</span> Rate the candidate</legend>
    <%= f.input :rating, collection: (1..5).to_a %>
    <legend><span class="number">2</span> What did you like/dislike about their response?</legend>
    <%= f.input :comment %>
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-primary"%>
    </div>
    <% end %>
  </div>
</div>


