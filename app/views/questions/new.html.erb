
<br>
<div class="text-center">
  <h3>Lets add some questions...</h3>
</div>

<div class=flex-container4>

<div class="signin">
<div class="form-container">
    <%= simple_form_for [@interview, @practice, @question] do |f| %>
    <div class="flex-container2">
      <div class="questions-form">
        <%= f.input :text, placeholder: "give it a name"%>
      </div>
    </div>
      <%= f.submit class: "btn btn-primary"%>
    </div>
    <% end %>
  </div>
  <div class="signin">
    <% @practice.questions.each do |question| %>
      <li>
        <%= question.text %>
      </li>
    <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-between pt-2 pb-2">
  <span>
    <%= link_to "Practices", interview_practices_path(@interview), class: "btn btn-primary btn-lg" %>
  </span>
</div>





