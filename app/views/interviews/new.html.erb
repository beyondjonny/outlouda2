<br>
<div class="text-center">
  <h3>New Interview - lets get started!</h3>
</div>
<div class="form-container">
  <%= simple_form_for [@user, @interview] do |f| %>
  <div class="flex-container2">
    <div class="form-style-5">
      <legend><span class="number">1</span> Job Info</legend>
      <%= f.input :name, placeholder: "Job Role" %>
      <%= f.input :company, placeholder: "Company that is hiring"%>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-style-5">
      <legend><span class="number">2</span>When do you want to start? </legend>
      <%= f.input :open_date, as: :string, label: "Start Date", input_html: { class: "datepicker"}  %>
      <%= f.input :final_date, as: :string, label: "Closing Date:".html_safe, input_html: { class: "datepicker" } %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-5">
    <div class="col-md-7">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
  <% end %>
</div>
